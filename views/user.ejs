<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Introduction to Sequelize</title>

    <%- include layout/head %>

  </head>
  <body>
    <%- include layout/navbar%>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="text-center">Users List</h1>

      <a href="/home"><button type="button" name="button" class="btn btn-primary">Home</button></a>
      <a href="./users/add"><button type="button" name="button" class="btn btn-warning">Add New</button></a>

          <table class="table table-striped table-hover">
            <thead>
              <th class="text-center">No</th>
              <th>Username</th>
              <th>Encrypted Password</th>
              <th>Secret Key </th>
              <th>Level Access</th>
              <th  class="text-center">Action </th>
            </thead>
            <% var i = 1; users.forEach(getData => { %>

            <tr>
              <td  class="text-center"><%= i %><% i += 1 %></td>
              <td><%= getData.username %></td>
              <td><%= getData.password %></td>
              <td><%= getData.secret %></td>
              <td><%= getData.role %></td>
              <td class="text-center">
                <a href="/users/<%= getData.id %>/edit"><button type="button" name="button" class="btn btn-info">Edit</button></a>
                <a href="/users/<%= getData.id %>/delete"><button type="button" name="button" class="btn btn-danger">Delete</button></a>
              </td>
            </tr>
              <% }) %>
          </table>

    </div>
  </div>
</div>
<%- include layout/footer%>

  </body>
</html>
